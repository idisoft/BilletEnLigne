{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'TechniGestMainBundle:MesVues:formTheme.html.twig' %}

<div class="bg-primary"><center>Changer votre mot de passe</center></div>

<div class="mywell-sm">
    <form action="{{ path('fos_user_change_password') }}" method="POST" class="fos_user_change_password">
        {{ form_widget(form) }}
        <br/>
        <center>
            <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-primary btn-sm"/>
        </center>
    </form>
</div>
