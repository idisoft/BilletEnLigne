{# Support #}
{% block widget_attributes %}
    {% spaceless %}
        id="{{ id }}" name="{{ full_name }}" class="form-control"

        {#% if read_only %}
            readonly="readonly"
        {% endif %#}

        {% if disabled %}
            disabled="disabled"
        {% endif %}

        {% if required %}
            required="required"
        {% endif %}

        {#% if max_length %}
            maxlength="{{ max_length }}"
        {% endif %#}

        {#% if pattern %}
            pattern="{{ pattern }}"
        {% endif %#}

        {% for attrname, attrvalue in attr %}
            {% if attrname in ['placeholder', 'title', 'class'] %}
                {{ attrname }}="{{ attrvalue|trans({}, translation_domain) }}"
            {% else %}
                {{ attrname }}="{{ attrvalue }}"
            {% endif %}
        {% endfor %}

    {% endspaceless %}

{% endblock widget_attributes %}

{% block widget_container_attributes %}
    {% spaceless %}

        {% if id is not empty %}
            id="{{ id }}"
        {% endif %}

        {% for attrname, attrvalue in attr %}
            {{ attrname }}="{{ attrvalue }}"
        {% endfor %}

    {% endspaceless %}
{% endblock widget_container_attributes %}

{% block button_attributes %}
    {% spaceless %}
        id="{{ id }}" name="{{ full_name }}"

        {% if disabled %}
            disabled="disabled"
        {% endif %}

        {% for attrname, attrvalue in attr %}
            {{ attrname }}="{{ attrvalue }}"
        {% endfor %}

    {% endspaceless %}
{% endblock button_attributes %}
