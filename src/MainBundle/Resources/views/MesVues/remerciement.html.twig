{%extends "MainBundle::adminLayout.html.twig" %}

{%block title %} BIENVENUE DANS VOTRE AGENCE DE VOYAGE {%endblock%}

{%block content %}
    {{parent()}}

    {#{ render(controller("MainBundle:RechercheIndex:recherche")) }#}

    <div class="row">
        <br><br><br>
        <div class="col-lg-10 col-md-10  col-sm-10 col-xs-10  col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
            <p class="bg-primary">
                {%if entite is defined %}
                    {{entite|upper}}:
                {%endif%}
                {%if operation is defined %}
                    {{operation}}
                {%endif%}
            </p>

        </div>
    </div>

    <div class="mywell-sm">
        Code Ticket: {{ ticket.code }} <br/>
        Compagnie: {{ ticket.voyageTrajet.trajet.compagnie.nomComp }}<br/>
        Départ: {{ ticket.voyageTrajet.trajet.source.nomGare }}<br/>
        Destination: {{ ticket.voyageTrajet.trajet.destination.nomGare }}<br/>
        Date: {{ ticket.voyageTrajet.voyage.dateVoyage | date('d-M-y')}}<br/>
        Nom & Prénom: {{ ticket.nomClient }} {{ ticket.prenomClient }}<br/>
        Téléphone: {{ ticket.telClient }}<br/>

        <p style="color: red">VEUILLEZ VOUS PRESNETER AU GUICHET AVEC LE CODE POUOR RETIRER VOTRE TICKET PAPIER.</p>
    </div>

    <a class="btn btn-primary" href="{{ path('admin_tickets') }}">Retour Page Admin</a>


{% endblock %}

{% block javascripts %}
    {{parent()}}

{%endblock%}


